<?xml version="1.0"?>
<PluginConfig>
	<Field id="infoLabel" type="label">
		<Label>Honeywell Evohome Plugin</Label>
	</Field>
	<Field id="simpleSeparator1" type="separator"/>

	<Field type="textfield" id="evohome_UserID" tooltip="Honeywell Evohome User ID" >
		<Label>User ID:</Label>
	</Field>
	<Field type="textfield" id="evohome_Password" secure="true" tooltip="Honeywell Evohome Password" >
		<Label>Password:</Label>
	</Field>
	<Field id="simpleSeparator2" type="separator"/>	
	<Field type="textfield" id="interval" tooltip="Polling Internval" defaultValue="30">
		<Label>Polling Interval:</Label>
	</Field>

<Field type="textfield" id="refresh_token"  hidden="true" defaultValue="">
	</Field>
<Field type="textfield" id="access_token"  hidden="true" defaultValue="">
	</Field>
	<Field type="textfield" id="access_token_expires"  hidden="true" defaultValue="">
	</Field>

	<Field id="simpleSeparator5" type="separator"/>

	<Field type="checkbox" id="showDebugInLog"
		tooltip="This enables lots of debugging messages in the Indigo Event Log.">
		<Label>Enable debugging:</Label>
		<Description>(use carefully)</Description>
	</Field>
</PluginConfig>
